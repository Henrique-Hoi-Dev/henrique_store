{
  "name": "henrique-store",
  "version": "1.0.0",
  "description": "E-commerce store built with Nuxt 3",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxt typecheck",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "ci:lint": "npm run lint",
    "ci:typecheck": "npm run typecheck",
    "ci:test": "npm run test",
    "ci:build": "npm run build",
    "ci:all": "npm run ci:lint && npm run ci:typecheck && npm run ci:test && npm run ci:build",
    "health": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^0.2.0",
    "@nuxtjs/color-mode": "3.3.0",
    "@nuxtjs/i18n": "8.0.0",
    "@nuxtjs/tailwindcss": "6.8.0",
    "@pinia/nuxt": "0.5.1",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "nuxt": "3.8.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "mercadopago": "^2.0.0",
    "nuxt-icon": "^1.0.0-beta.7",
    "pinia": "2.1.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
